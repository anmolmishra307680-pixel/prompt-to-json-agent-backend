# Environment Configuration Template
# Copy this file to .env and update values for your environment

# Environment type (development, production, testing)
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/prompt_to_json_db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# External Services (Optional)
OPENAI_API_KEY=your_openai_api_key_here

# Deployment (Production)
RENDER_DEPLOY_HOOK=https://api.render.com/deploy/srv-xxxxx
PRODUCTION_URL=https://your-app.onrender.com

# Docker Configuration
POSTGRES_USER=prompt_user
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=prompt_to_json_db

# Monitoring
LOG_LEVEL=INFO
MONITORING_ENABLED=true
METRICS_EXPORT_INTERVAL=300